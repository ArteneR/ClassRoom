<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xdot.classroom.screens.edit_schedule_entry.EditScheduleEntryActivity">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_classroom_2"
        app:layout_constraintVertical_bias="0.0" />

    <TableLayout
        android:layout_width="348dp"
        android:layout_height="273dp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        tools:layout_editor_absoluteX="18dp"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingRight="10dp"
                android:text="Entry type:"
                android:textAlignment="textEnd"
                android:textSize="18sp"/>

            <Spinner
                android:id="@+id/spinnerEntryType"
                android:layout_weight="5"
                android:padding="8dp"
                android:background="@color/color4"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingRight="10dp"
                android:text="Subject name:"
                android:textAlignment="textEnd"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/editText"
                android:layout_weight="5"
                android:background="@color/color4"
                android:hint="eg. Programming"
                android:padding="6dp"
                android:textColorLink="@null"
                android:textCursorDrawable="@null"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingRight="10dp"
                android:text="Start time:"
                android:textAlignment="textEnd"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btnStartTime"
                android:layout_weight="5"
                android:text="10:00"
                android:onClick="clicked"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingRight="10dp"
                android:text="End time:"
                android:textAlignment="textEnd"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btnEndTime"
                android:layout_weight="5"
                android:text="12:00"
                android:onClick="clicked"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingRight="10dp"
                android:text="Building name:"
                android:textAlignment="textEnd"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/editText2"
                android:layout_weight="5"
                android:background="@color/color4"
                android:hint="eg. Corpul A"
                android:padding="6dp"
                android:textCursorDrawable="@null"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingRight="10dp"
                android:text="Room name:"
                android:textAlignment="textEnd"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/editText3"
                android:layout_weight="5"
                android:background="@color/color4"
                android:hint="eg. A209"
                android:padding="6dp"
                android:textCursorDrawable="@null"/>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btnSaveChanges"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="Save Changes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintBottom_toBottomOf="@+id/ivBackground"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.09"
        android:onClick="clicked"/>

</android.support.constraint.ConstraintLayout>
